{
  "name": "hacklauncher",
  "version": "1.0.2",
  "description": "渗透工具箱",
  "productName": "HackLauncher",
  "main": "main.js",
  "scripts": {
    "start": "chcp 65001 >nul && electron . --no-sandbox",
    "dev": "chcp 65001 >nul && NODE_ENV=development electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "lint": "eslint .",
    "build:clean": "rimraf dist && rimraf node_modules/.cache && rimraf node_modules/.rpt2_cache",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "iconv-lite": "^0.7.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "chalk": "^4.1.2",
    "cross-spawn": "^7.0.6",
    "electron": "^24.8.8",
    "electron-builder": "^26.4.0",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "fs-extra": "^10.0.0",
    "rimraf": "^3.0.2",
    "semver": "^6.3.1"
  },
  "build": {
    "appId": "com.demonrr.hacklauncher",
    "productName": "HackLauncher",

    "asar": true,

    "directories": {
      "output": "dist",
      "buildResources": "build"
    },

    "files": [
      "**/*"
    ],

    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ],

    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "executableName": "HackLauncher",
      "requestedExecutionLevel": "asInvoker"
    },

    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "渗透武器库",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    }
},
  "repository": {
    "type": "git",
    "url": "https://github.com/DemonRR/HackLauncher.git"
  },
  "keywords": [
    "hack",
    "渗透工具箱",
    "启动器",
    "渗透工具",
    "武器库"
  ],
  "author": "DemonRR",
  "license": "MIT",
  "homepage": "https://github.com/DemonRR/HackLauncher.git",
  "bugs": {
    "url": "https://github.com/DemonRR/HackLauncher/issues"
  }
}
